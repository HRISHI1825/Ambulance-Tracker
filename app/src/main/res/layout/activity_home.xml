<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnPanic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:drawableLeft="@drawable/warning"
        android:background="@drawable/hospitals_background_card"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:text="Emergency Panic"/>

    <Button
        android:id="@+id/btn_hospitals"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:drawableLeft="@drawable/hospital"
        android:background="@drawable/hospitals_background_card"
        android:paddingTop="10dp"
        android:text="Hospitals"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_health_records"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:drawableLeft="@drawable/addrecord"
        android:background="@drawable/hospitals_background_card"
        android:paddingTop="10dp"
        android:text="Add Health Records"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_view_health_records"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:drawableLeft="@drawable/viewreport"
        android:background="@drawable/hospitals_background_card"
        android:paddingTop="10dp"
        android:text="View Health Records"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_view_donor_friend"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:drawableLeft="@drawable/donar"
        android:background="@drawable/hospitals_background_card"
        android:paddingTop="10dp"
        android:text="View Donor Friends"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:drawableLeft="@drawable/logout"
        android:background="@drawable/hospitals_background_card"
        android:paddingTop="10dp"
        android:text="Logout"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
</ScrollView>