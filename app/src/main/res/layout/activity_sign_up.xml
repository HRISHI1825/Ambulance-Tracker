<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.SignUpActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <EditText
            android:id="@+id/edFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/edtext" />

        <EditText
            android:id="@+id/edContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Contact Number"
            android:inputType="number"
            android:maxLength="10"
            android:padding="10dp"
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/edtext" />

        <EditText
            android:id="@+id/edAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:maxLength="3"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/edtext" />

        <EditText
            android:id="@+id/edUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="User Name"
            android:inputType="text"
            android:maxLength="15"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/edtext" />

        <EditText
            android:id="@+id/edWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Weight In kg"
            android:inputType="numberSigned"
            android:maxLength="3"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/edtext" />

        <EditText
            android:id="@+id/edRelNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Relative Mobile Number"
            android:inputType="numberSigned"
            android:maxLength="10"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/edtext" />

        <Spinner
            android:id="@+id/spnBloodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/bGroup"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"

            />

        <Spinner
            android:id="@+id/spnAllergy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/allergy"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"

            />

        <EditText
            android:id="@+id/edAllergy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Enter Allergy"
            android:inputType="textMultiLine"
            android:maxLength="15"
            android:padding="10dp"
            android:maxLines="5"
            android:lines="3"
            android:gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/edtext"
            android:visibility="gone"/>


        <Spinner
            android:id="@+id/spnBreathing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Breathing"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"
            />

        <Spinner
            android:id="@+id/spnGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/gender"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"

            />

        <Spinner
            android:id="@+id/spntype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/user_type"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:textSize="20sp"
            android:text="SIGN UP"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:elevation="0dp"/>
    </LinearLayout>
</ScrollView>